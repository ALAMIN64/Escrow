@model OA.WEB.Models.AccountModels.LoginViewModel
@{
    ViewData["Title"] = "Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .intro-section1 {
  position: relative; }
            .intro-section1, .intro-section1 .container .row {
                height: 13vh;
                min-height: 50px;
                background-color: #01426a;
            }
    .intro-section:before {
        content: "";
        position: absolute;
        height: 10%;
        width: 100%;
        border-bottom-right-radius: 0px;
    }
    @*@media (max-width: 991.98px) {
      .intro-section:before {
        width: 100%; } }*@
  .intro-section1 h1 {
    font-size: 3rem;
    font-weight: 900;
    color: #fff; }
  .intro-section1 p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
    max-width: 400px; }

    </style>
</head>
<div class="intro-section1" id="home-section">
    <div class="container">
        <div class="row contentcenterp ">
        </div>
    </div>
</div>
<div class="card" style="padding-top:30px;background-color:#c4d7ff">
    <div class="card-title">
        <div class="col-sm-12">
        </div>
    </div>
    <div class="card-body">
        <div class="row" >
            <div class="col-1"></div>
            <div class="col-10" style="background-color:white;padding: 10px; font-size:small">
                <form asp-controller="Account" asp-action="ResetPasswordMail" method="post">
                    <div style="text-align:center;">
                        <h5><b>Forgot password?</b></h5>
                        <br />
                        <h6>Please enter your email. We will sent a link to your email!</h6>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="user" class="text-capitalize">EMAIL ADDRESS</label>
                                <input id="user" asp-for="Email" required type="text" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div> 
                        <div class="col-12">
                            <div class="form-group" style="padding-top:30px">
                                <input type="submit" class="btn btn-lg btn-block" value="Send Email" style="color:white;height:35px;background-color:#1b8a1d">
                            </div>
                        </div>
                    </div>
                   
                   
                </form>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>
@model OA.WEB.Models.AccountModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .intro-section1 {
  position: relative; }
            .intro-section1, .intro-section1 .container .row {
                height: 13vh;
                min-height: 50px;
                background-color: #01426a;
            }
    .intro-section:before {
        content: "";
        position: absolute;
        height: 10%;
        width: 100%;
        border-bottom-right-radius: 0px;
    }
    @*@media (max-width: 991.98px) {
      .intro-section:before {
        width: 100%; } }*@
  .intro-section1 h1 {
    font-size: 3rem;
    font-weight: 900;
    color: #fff; }
  .intro-section1 p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
    max-width: 400px; }

    </style>
</head>
<div class="intro-section1" id="home-section">
    <div class="container">
        <div class="row contentcenterp ">
        </div>
    </div>
</div>
<div class="card" style="padding-top:30px;background-color:#e4f4fb">
    <div class="card-title">
        <div class="col-sm-12">
        </div>
    </div>
    <div class="card-body">
        <div class="row" style="align-content: center;">
            <div class="col-2"></div>
            <div class="col-8" style="background-color:white;padding: 10px;">
                <form asp-controller="Account" asp-action="Emplogin" method="post">
                    <h5><b>Log in to Pay Guardex Admin Panel</b></h5>
                    <br />
                    <div class="form-group">
                        <label for="user" class="text-capitalize">EMAIL ADDRESS</label>
                        <input id="user" asp-for="Email" required type="text" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pass" class="text-capitalize">PASSWORD</label>
                        <input id="pass" type="password" required asp-for="Password" class="form-control" data-type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="IncorrectInput" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => Model.ReturnUrl)
                    </div>
                    <div class="form-group" style="padding-top:30px">
                        <input type="submit" class="btn btn-block btn-success" value="Login" style="color:white">
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                                <a href="#" style="color:red;font-size:13px">Forgot password?</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>